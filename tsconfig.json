{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "baseUrl": "./",
      "paths": {
        "@app": ["./src/app.ts"],
        "@config/*": ["./src/core/config/*"],
        "@utils/*": ["./src/core/utils/*"],
        "@helpers/*": ["./src/core/helpers/*"],
        "@errors/*": ["./src/core/errors/*"],
        "@database/*": ["./src/core/database/*"],
        "@modules/*": ["./src/modules/*"],
        "@routes/*": ["./src/routes/*"],
        "@providers/*": ["./src/core/providers/*"],
      },
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "resolveJsonModule": true
    }
  }
  