{
  "name": "api-devtrails-portfolio-v2",
  "version": "0.0.3",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "start": "node build/server.js",
    "build": "tsup src --out-dir build",
    "lint": "npx eslint --ext .tsx,.ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepare": "husky install",
    "commit": "lint-staged && cz",
    "co:changeset": "changeset add && changeset version && git add . && lint-staged && cz",
    "co": "git add . && lint-staged && cz",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "publish-packages": "yarn build lint test && changeset version && changeset publish",
    "test:create-prisma-environment": "cd prisma/vitest-environment-prisma && yarn link",
    "test:install-prisma-environment": "yarn link vitest-environment-prisma",
    "test": "vitest run src/modules/**/entities/** src/modules/**/use-cases/**",
    "test:watch": "vitest src/modules/**/entities/** src/modules/**/use-cases/**",
    "pretest:e2e": "run-s test:create-prisma-environment test:install-prisma-environment",
    "test:e2e": "vitest run --dir src/modules/**/controllers/**",
    "test:e2e:watch": "vitest --dir src/modules/**/controllers/**",
    "test:cov": "vitest run --coverage",
    "test:ui": "vitest --ui"
  },
  "dependencies": {
    "@fastify/cors": "^8.2.1",
    "@fastify/swagger": "^8.3.1",
    "@fastify/swagger-ui": "^1.6.0",
    "@prisma/client": "^4.12.0",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.0.3",
    "fastify": "^4.15.0",
    "yarn-run-all": "^3.1.1",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.1",
    "@commitlint/cli": "^17.5.1",
    "@commitlint/config-conventional": "^17.4.4",
    "@types/bcryptjs": "^2.4.2",
    "@types/node": "^18.15.11",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.57.0",
    "@typescript-eslint/parser": "^5.57.0",
    "@vitest/coverage-c8": "^0.29.8",
    "@vitest/ui": "^0.29.8",
    "commitizen": "^4.3.0",
    "commitlint": "^17.5.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^3.5.4",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-import-helpers": "^1.3.1",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.0",
    "lint-staged": "^13.2.0",
    "prettier": "^2.8.7",
    "prisma": "^4.12.0",
    "supertest": "^6.3.3",
    "tsup": "^6.7.0",
    "tsx": "^3.12.6",
    "typescript": "^5.0.3",
    "vite": "^4.2.1",
    "vite-plugin-node": "^3.0.2",
    "vite-tsconfig-paths": "^4.0.7",
    "vitest": "^0.29.8"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "engines": {
    "node": ">=18.0.0",
    "yarn": ">=1.22.5"
  }
}
